<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <!--
        Added the constraints for entity Pedido.
    -->
    <changeSet id="20221013180515-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="solicitante_id"
                                 baseTableName="pedido"
                                 constraintName="fk_pedido__solicitante_id"
                                 referencedColumnNames="id"
                                 referencedTableName="cliente"/>

        <addForeignKeyConstraint baseColumnNames="solicitado_id"
                                 baseTableName="pedido"
                                 constraintName="fk_pedido__solicitado_id"
                                 referencedColumnNames="id"
                                 referencedTableName="empresa"/>

        <addForeignKeyConstraint baseColumnNames="endereco_id"
                                 baseTableName="pedido"
                                 constraintName="fk_pedido__endereco_id"
                                 referencedColumnNames="id"
                                 referencedTableName="endereco"/>
    </changeSet>
</databaseChangeLog>
